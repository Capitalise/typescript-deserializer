{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "removeComments": true,
    "strict": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "*.spec.ts"
  ]
}
